<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.modules.main.ui.listPaymentResponse.ListPaymentResponseActivity">
    <TextView
            android:id="@+id/text_no_buy"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:text="@string/no_se_ha_realizado_ninguna_compra_por_el_momento"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_payments"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</FrameLayout>